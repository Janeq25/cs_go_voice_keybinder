




<no_connection_screen>:
    GridLayout:
        rows: 3
        size_hint_x: 0.5
        size_hint_y: 0.8
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        Label:
            size_hint_y: 0.4
            text: 'Can\'t reach the server'
        TextInput:
            id: server_ip
            size_hint_y: 0.4
            text: 'enter servers ip'
            halign: 'center'
            on_touch_down: if self.collide_point(*args[1].pos): self.text = ""
        Button:
            text: 'submit'
            on_press: root.on_press_submit(server_ip.text)


<default_screen>:
    GridLayout:
        rows: 2
        orientetion: 'vertical'
        BoxLayout:
            size_hint: 1, 0.3
            Button:
                text: 'stop'
                on_press: root.on_press_stop()
            Button:
                text: 'refresh'
                on_press: root.on_press_refresh()
            GridLayout:
                rows: 2
                Slider:
                    id: 'volume_slider'
                    orientetion: 'vertical'
                    min: -20
                    max: 20
                    on_value: root.on_slider_value_change(self.value)
                Label:
                    text: 'volume'

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            Buttons_list:





